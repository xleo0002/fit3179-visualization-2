{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "vconcat": [
        {
            "width": 720,
            "height": 360,
            "title": {
                "text": [
                    "Organ Donation Pledges Across Malaysia"
                ],
                "subtitle": "Distributed within all states in 2022",
                "subtitleColor": "gray",
                "subtitleFontStyle": "italic",
                "dy": -10
            },
            "data": {
                "url": "js/ne_10m_admin_1_states_provinces.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_10m_admin_1_states_provinces"
                }
            },
            "projection": {
                "type": "equalEarth"
            },
            "layer": [
                {
                    "mark": {
                        "type": "rect",
                        "width": 600,
                        "height": 300,
                        "x": 0,
                        "y": 0,
                        "x2": 720,
                        "y2": 360,
                        "fill": "lightblue"
                    }
                },
                {
                    "data": {
                        "url": "js/ne_10m_admin_1_states_provinces.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_admin_1_states_provinces"
                        }
                    },
                    "transform": [
                        {
                            "calculate": "'Data is not available in ' + datum.properties.name",
                            "as": "note"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "fill": "#ddd",
                        "stroke": "white",
                        "strokeWidth": 1
                    },
                    "encoding": {
                        "tooltip": {
                            "field": "note"
                        }
                    }
                },
                {
                    "data": {
                        "url": "js/ne_10m_admin_1_states_provinces.json",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_10m_admin_1_states_provinces"
                        }
                    },
                    "transform": [
                        {
                            "calculate": "datum.properties.admin === 'Malaysia' ? 'Malaysia' : 'Other'",
                            "as": "region"
                        },
                        {
                            "lookup": "properties.name",
                            "from": {
                                "data": {
                                    "url": "data/cleaned_pledges_by_year_state.csv",
                                    "format": {
                                        "type": "csv"
                                    }
                                },
                                "key": "state",
                                "fields": [
                                    "year",
                                    "state",
                                    "total_pledges"
                                ]
                            }
                        },
                        {
                            "filter": "datum.region === 'Malaysia'"
                        },
                        {
                            "filter": "datum.year == 2022"
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "stroke": "#fff",
                        "strokeWidth": 0.5,
                        "cursor": "pointer"
                    },
                    "params": [
                        {
                            "name": "select_area",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "total_pledges"
                                ]
                            }
                        },
                        {
                            "name": "select_area_interact",
                            "select": {
                                "type": "point",
                                "fields": [
                                    "state"
                                ]
                            }
                        }
                    ],
                    "encoding": {
                        "fillOpacity": {
                            "condition": {
                                "param": "select_area",
                                "value": 1
                            },
                            "value": 0.2
                        },
                        "color": {
                            "title": [
                                "Pledges"
                            ],
                            "field": "total_pledges",
                            "type": "quantitative",
                            "scale": {
                                "type": "threshold",
                                "domain": [
                                    400,
                                    4000,
                                    8000
                                ],
                                "range": [
                                    "#f8ce78",
                                    "#fa9d4f",
                                    "#f05c4d",
                                    "#b71d3e"
                                ]
                            },
                            "legend": {
                                "format": ",.0f"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "state",
                                "type": "nominal",
                                "title": "State"
                            },
                            {
                                "field": "total_pledges",
                                "type": "quantitative",
                                "title": "Total Pledges",
                                "format": ","
                            },
                            {
                                "field": "year",
                                "type": "quantitative",
                                "title": "Year"
                            }
                        ]
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "text": "Selangor has the most",
                        "font": "Arial",
                        "color": "#b71d3e",
                        "dx": -175,
                        "dy": 20,
                        "fontSize": 14
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "font": "Arial",
                        "text": "organ donation pledges",
                        "color": "#b71d3e",
                        "dx": -162,
                        "dy": 35,
                        "fontSize": 14
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "text": "Labuan has the least",
                        "font": "Arial",
                        "color": "#b78e1d",
                        "dx": 110,
                        "dy": -75,
                        "fontSize": 14
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "font": "Arial",
                        "text": "organ donation pledges",
                        "color": "#b78e1d",
                        "dx": 110,
                        "dy": -60,
                        "fontSize": 14
                    }
                }
            ]
        },
        {
            "hconcat": [
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "select_area_interact"
                            }
                        }
                    ],
                    "width": 250,
                    "height": 320,
                    "title": {
                        "text": [
                            "The Gender Spectrum"
                        ],
                        "subtitle": "Population count by gender in 2022",
                        "subtitleColor": "gray",
                        "subtitleFontStyle": "italic",
                        "dy": -10
                    },
                    "data": {
                        "url": "data/cleaned_population_state.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "layer": [
                        {
                            "params": [
                                {
                                    "name": "highlight",
                                    "select": {
                                        "type": "point",
                                        "on": "mouseover"
                                    }
                                },
                                {
                                    "name": "select",
                                    "select": {
                                        "type": "point",
                                        "fields": [
                                            "sex"
                                        ],
                                        "clear": "mouseup"
                                    }
                                }
                            ],
                            "mark": {
                                "type": "arc",
                                "innerRadius": 50,
                                "cursor": "pointer"
                            },
                            "encoding": {
                                "fillOpacity": {
                                    "condition": {
                                        "param": "select",
                                        "value": 1
                                    },
                                    "value": 0.3
                                },
                                "theta": {
                                    "aggregate": "sum",
                                    "field": "population",
                                    "stack": "normalize"
                                },
                                "color": {
                                    "field": "sex",
                                    "scale": {
                                        "range": [
                                            "#004A75",
                                            "#38812F",
                                            "#009596",
                                            "#ffb1cb",
                                            "#F4B678",
                                            "#90d6ff",
                                            "#8F4700",
                                            "#8481DD"
                                        ]
                                    }
                                },
                                "strokeWidth": {
                                    "condition": [
                                        {
                                            "param": "select",
                                            "empty": false,
                                            "value": 2
                                        },
                                        {
                                            "param": "highlight",
                                            "empty": false,
                                            "value": 1
                                        }
                                    ],
                                    "value": 0
                                }
                            }
                        },
                        {
                            "data": {
                                "url": "data/cleaned_population_state.csv",
                                "format": {
                                    "type": "csv"
                                }
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "param": "select_area_interact"
                                    }
                                },
                                {
                                    "aggregate": [
                                        {
                                            "op": "sum",
                                            "field": "population",
                                            "as": "total_population"
                                        }
                                    ]
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "color": "black",
                                "fontSize": 16,
                                "dy": 5,
                                "fontWeight": "bold"
                            },
                            "encoding": {
                                "text": {
                                    "field": "total_population",
                                    "format": ","
                                }
                            }
                        },
                        {
                            "mark": {
                                "type": "text",
                                "color": "black",
                                "fontSize": 13,
                                "dy": -15,
                                "fontWeight": 100,
                                "text": "Total"
                            }
                        },
                        {
                            "mark": {
                                "type": "text",
                                "color": "white",
                                "fontSize": 33,
                                "dx": -80,
                                "fontWeight": "bold",
                                "text": "üë¶üèª"
                            }
                        },
                        {
                            "data": {
                                "url": "data/cleaned_population_state.csv",
                                "format": {
                                    "type": "csv"
                                }
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "param": "select_area_interact"
                                    }
                                },
                                {
                                    "filter": "datum.sex == 'Male'"
                                },
                                {
                                    "aggregate": [
                                        {
                                            "op": "sum",
                                            "field": "population",
                                            "as": "population_by_male"
                                        }
                                    ],
                                    "groupby": [
                                        "sex"
                                    ]
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "color": "black",
                                "fontSize": 14,
                                "dx": -80,
                                "dy": 30,
                                "text": "population_by_male"
                            },
                            "encoding": {
                                "text": {
                                    "field": "population_by_male",
                                    "type": "quantitative",
                                    "format": ","
                                }
                            }
                        },
                        {
                            "mark": {
                                "type": "text",
                                "color": "white",
                                "fontSize": 33,
                                "dx": 80,
                                "fontWeight": "bold",
                                "text": "üë©üèª"
                            }
                        },
                        {
                            "data": {
                                "url": "data/cleaned_population_state.csv",
                                "format": {
                                    "type": "csv"
                                }
                            },
                            "transform": [
                                {
                                    "filter": {
                                        "param": "select_area_interact"
                                    }
                                },
                                {
                                    "aggregate": [
                                        {
                                            "op": "sum",
                                            "field": "population",
                                            "as": "population_by_female"
                                        }
                                    ],
                                    "groupby": [
                                        "sex"
                                    ]
                                },
                                {
                                    "filter": "datum.sex == 'Female'"
                                }
                            ],
                            "mark": {
                                "type": "text",
                                "color": "black",
                                "fontSize": 14,
                                "dx": 80,
                                "dy": 30
                            },
                            "encoding": {
                                "text": {
                                    "field": "population_by_female",
                                    "format": ","
                                },
                                "tooltip": [
                                    {
                                        "field": "population_by_female",
                                        "type": "quantitative",
                                        "title": "Population"
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "width": 400,
                    "height": 320,
                    "title": {
                        "text": [
                            "Diverse Ages, Diverse Needs"
                        ],
                        "subtitle": "Population count by age group and ethnicity in 2022",
                        "subtitleColor": "gray",
                        "subtitleFontStyle": "italic",
                        "dy": -10
                    },
                    "data": {
                        "url": "data/cleaned_population_state.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "transform": [
                        {
                            "filter": {
                                "param": "select_area_interact"
                            }
                        },
                        {
                            "filter": {
                                "param": "select"
                            }
                        },
                        {
                            "aggregate": [
                                {
                                    "op": "sum",
                                    "field": "population",
                                    "as": "total_population"
                                }
                            ],
                            "groupby": [
                                "age",
                                "ethnicity"
                            ]
                        }
                    ],
                    "mark": {
                        "type": "bar",
                        "cornerRadius": 3,
                        "height": {"band": 0.7}
                    },
                    "encoding": {
                        "y": {
                            "field": "age",
                            "type": "ordinal",
                            "title": "Age Group"
                        },
                        "x": {
                            "field": "total_population",
                            "type": "quantitative",
                            "title": "Total Population"
                        },
                        "color": {
                            "field": "ethnicity",
                            "type": "nominal",
                            "title": "Demographics",
                            "scale": {
                                "range": [
                                    "#004A75",
                                    "#38812F",
                                    "#009596",
                                    "#ffb1cb",
                                    "#F4B678",
                                    "#90d6ff",
                                    "#8F4700",
                                    "#8481DD"
                                ]
                            },
                            "legend": {
                                "orient": "bottom"
                            }
                        },
                        "tooltip": [
                            {
                                "field": "age",
                                "type": "nominal",
                                "title": "Age Group"
                            },
                            {
                                "field": "ethnicity",
                                "type": "nominal",
                                "title": "Ethnicity"
                            },
                            {
                                "field": "total_population",
                                "type": "quantitative",
                                "title": "Total Population",
                                "format": ","
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "config": {
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        },
        "font": "Arial",
        "title": {
            "fontSize": 20,
            "color": "lightseagreen",
            "align": "center"
        },
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        },
        "legend": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}